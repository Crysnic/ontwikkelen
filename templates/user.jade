doctype html
html
  head
    meta(charset='utf-8')
    script(src='js/user.js')
    link(rel='stylesheet', href='css/style.css')
    link(rel='stylesheet', href='css/user.css')
    title= user.login
  body
    .user
      h1.mainheader ontWiKKelen
      .bodycontainer
        .avatar
          - var userAvatar= user.avatar || "/images/images.png"
            img(src="#{userAvatar}" alt='#{user.login}')
          form.choosePicture(method="post" action="/user_avatar" enctype="multipart/form-data")
            input(type="file" name=user.login+"_photo" accept="image/*", required)
            p
              input(type="submit" value="Отправить")
        .userdata
          p.userName= user.name + " " + user.surname
          table
            tr
              th День рождения
              td= user.date
            tr
              th Место проживания
              td= user.city
            tr
              th E-mail
              td= user.email